pipeline {
  agent any
  stages {
    stage('Checkout'){
      steps{
        checkout scm
        sh 'ls -altr'
       }
      }

    stage('Deploy Test') {
      steps {
          withKubeConfig([credentialsId: 'kubeconfig']) {
          sh 'cat service.yaml | sed "s/env/test/g"'
          sh 'cat deployment.yaml | sed "s/env/test/g" | kubectl apply -f -'
          sh 'kubectl apply -f service.yaml'
        }
      }
  }
}
}
